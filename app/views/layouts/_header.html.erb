<!-- #As used in Michael Hartl's Ruby on Rails Tutorial -->
<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <ul class="nav pull-left"><%= link_to image_tag("rubeus_logo_cropped.png"), root_path %> </ul>
    <%= form_tag("/search" , method: "get", class: "navbar-search pull-left") do %>
      <%= text_field_tag "q", search_param, :class => "search-query span5", :placeholder => "Search" %>
    <% end %>

      <ul class="nav pull-right">
        <li><%= link_to "Home", root_path %></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href = "#">
            Products <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li> <%= link_to "All Products", products_path %></li>
            <li> <%= link_to "My Products", my_products_path %></li>
            <li><%= link_to "Sell Something", new_product_path %></li>
          </ul>
        </li>
        <% if user_signed_in? %>
          <li><%= link_to "Offers", offers_path %></li>
          <li><%= link_to "Messages", user_messages_path(current_user) %></li>
          <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href = "#">
              Profile <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li> <%= link_to "My Profile", user_path(current_user) %></li>
                <li> <%= link_to "Edit Profile", edit_user_path(current_user) %></li>
              </ul>
            </li>
          <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to "Sign In", new_user_session_path%></li>
          <li><%= link_to "Sign Up", new_user_registration_path%></li>
        <%end%>
      </ul>
  </div>
</header>